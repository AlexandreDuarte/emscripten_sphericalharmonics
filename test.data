#version 300 es

precision highp float;

uniform vec4 color1;
uniform vec4 color2;

in float switchColor;
out vec4 color;

void main() {

    if(switchColor > 0.0f) {
        color = color1;
    } else {
        color = color2;
    }

}#version 300 es

precision highp float;

layout(location=0) in vec3 pos;

layout(location=1) in float sC;

uniform mat4 mvp;

out float switchColor;

void main() {
    switchColor = sC;
    gl_Position = mvp * vec4(pos, 1);
}